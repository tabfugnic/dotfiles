general {
  colors = true
  interval = 5
}

order += "disk /home"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "battery 0"
order += "battery 1"
order += "volume master"
order += "load"
order += "cpu_temperature 0"
order += "time"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: Down"
}

ethernet _first_ {
  # sudo setcap cap_net_admin=ep $(which i3status)
  format_down = ""
  format_up = "E: %ip (%speed)"
}

battery 0 {
  format = "%status %percentage %remaining"
  format_down = ""
  low_threshold = 10
  threshold_type = "percentage"
  last_full_capacity = true
  integer_battery_capacity = true
}

battery 1 {
  format = "%status %percentage %remaining"
  format_down = ""
  low_threshold = 10
  threshold_type = "percentage"
  last_full_capacity = true
  integer_battery_capacity = true
}

cpu_temperature 0 {
  format = "T: %degrees °C"
  max_threshold = 65
}

path_exists VPN {
  path = "/proc/sys/net/ipv4/conf/tun0"
  format_down = ""
  format = "%title"
}

time {
  format = "%Y-%m-%d %H:%M"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%free (/)"
}

disk "/home" {
  format = "%free (/home)"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
