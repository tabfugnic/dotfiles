general {
  colors = true
  interval = 5
}

order += "github primary"
order += "github secondary"
order += "disk /home"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "battery 0"
order += "battery 1"
order += "volume master"
order += "load"
order += "cpu_temperature 0"
order += "pomodoro"
order += "time"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = ""
}

ethernet _first_ {
  format_down = ""
  format_up = "E: %ip (%speed)"
}

battery 0 {
  format = "%status %percentage %remaining"
  format_down = ""
  low_threshold = 10
  threshold_type = "percentage"
  last_full_capacity = true
  integer_battery_capacity = true
}

battery 1 {
  format = "%status %percentage %remaining"
  format_down = ""
  low_threshold = 10
  threshold_type = "percentage"
  last_full_capacity = true
  integer_battery_capacity = true
}

cpu_temperature 0 {
  format = "T: %degrees °C"
  path = "/sys/class/hwmon/hwmon2/temp1_input"
}

path_exists VPN {
  path = "/proc/sys/net/ipv4/conf/tun0"
  format_down = ""
  format = "%title"
}

time {
  format = "%Y-%m-%d %H:%M"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%free (/)"
}

disk "/home" {
  format = "%free (/home)"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

pomodoro {
  format = "{mmss}"
  format_active = "P: {format}"
  format_stopped = "P: {format}"
  format_break = "P: #{breakno} {format}"
  format_break_stopped = "P: #{breakno} {format}"
}

github primary {
  auth_token = env(GITHUB_TOKEN)
  username = "tabfugnic"
  repo = env(GITHUB_REPO_PRIMARY)
  format = "{repo} PRs:{pull_requests}"
}

github secondary {
  auth_token = env(GITHUB_TOKEN)
  username = "tabfugnic"
  repo = env(GITHUB_REPO_SECONDARY)
  format = "{repo} PRs:{pull_requests}"
}
